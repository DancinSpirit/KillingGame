<div class="left-rule-arrow rule-arrow"><</div>
<div id="rule-box">
    <div id="rule-number"><p id="rule-number-text">3</p></div>
    <div id="rule-text">
        <p class="rule-p">#3.A: Once a body is discovered, a “Body Discovery Announcement” will immediately play.</p>
        <p class="rule-p">#3.B: A body is only considered “discovered” once 3 or more students have encountered it.</p>
        <p class="rule-p">#3.C: Students may not commit another murder once a maximum of two bodies have been discovered.</p>
    </div>
</div>
<div class="right-rule-arrow rule-arrow">></div>
<animation><%if(animation){%><%=animation%><%}else{%>left<%}%></animation>
<script>
    buttons.leftArrow = function(){
        $(".left-rule-arrow").on("mouseover",function(){
            playSound("Selecting");
        })
        $(".left-rule-arrow").on("click", function(){
            playSound("Selected");
        })
        $(".left-rule-arrow").on("click", function(){
            newStates = ["despair","e-handbook","rules","school","rule-two"]
            newDatabaseObjects = [false,false,false,false,false]
            newCustomData = [false,false,false,false,{animation:"right"}]
            pageTitle = "Killing Game"
            url = "/despair/e-handbook/rules"
            stateChange(newStates,newDatabaseObjects,newCustomData,pageTitle,url)
        })
    }
    buttons.leftArrow();
    buttons.rightArrow = function(){
        $(".right-rule-arrow").on("mouseover",function(){
            playSound("Selecting");
        })
        $(".right-rule-arrow").on("click", function(){
            playSound("Selected");
        })
        $(".right-rule-arrow").on("click", function(){
            newStates = ["despair","e-handbook","rules","school","rule-four"]
            newDatabaseObjects = [false,false,false,false,false]
            newCustomData = [false,false,false,false,{animation:"left"}]
            pageTitle = "Killing Game"
            url = "/despair/e-handbook/rules"
            stateChange(newStates,newDatabaseObjects,newCustomData,pageTitle,url)
        })
    }
    buttons.rightArrow();
</script>